@model FitnessCenter.Models.ViewModels.AppointmentCreateViewModel
@{
    ViewData["Title"] = "Randevu Oluştur";
    ViewData["NoTopPadding"] = true;
}

<style>
    .create-page {
        min-height: 100vh;
        padding-top: 120px;
        padding-bottom: 80px;
        background: linear-gradient(135deg, #0a0a14 0%, #0f0f1a 100%);
    }

    .page-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .page-header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 15px;
    }

    .page-header h1 i {
        background: linear-gradient(135deg, #00d26a, #00ff88);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .page-header p {
        color: #b8b8b8;
        font-size: 1.1rem;
    }

    .edit-card {
        background: linear-gradient(145deg, #12121c 0%, #0d0d14 100%);
        border: 1px solid rgba(0, 210, 106, 0.1);
        border-radius: 20px;
        overflow: hidden;
    }

    .edit-card-header {
        background: linear-gradient(135deg, rgba(0, 210, 106, 0.15) 0%, rgba(0, 210, 106, 0.05) 100%);
        padding: 25px 30px;
        border-bottom: 1px solid rgba(0, 210, 106, 0.1);
    }

    .edit-card-header h5 {
        margin: 0;
        color: #fff;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .edit-card-header h5 i {
        color: #00d26a;
    }

    .edit-card-body {
        padding: 30px;
    }

    .form-label {
        color: #b8b8b8;
        font-weight: 500;
        margin-bottom: 8px;
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-label i {
        color: #00d26a;
    }

    .form-control, .form-select {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        color: #fff;
        padding: 12px 16px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

    .form-select:disabled {
        background-color: rgba(24, 24, 43, 0.5);
        color: #6c757d;
    }

    .form-control:focus, .form-select:focus {
        background: rgba(0, 210, 106, 0.05);
        border-color: #00d26a;
        box-shadow: 0 0 0 3px rgba(0, 210, 106, 0.1);
        color: #fff;
    }

    .form-select option {
        background: #12121c;
        color: #fff;
    }

    .form-control::placeholder {
        color: #666;
    }

    input[type="date"]::-webkit-calendar-picker-indicator {
        filter: invert(1);
        cursor: pointer;
    }

    textarea.form-control {
        min-height: 100px;
    }

    .text-muted {
        color: #888 !important;
    }

    .section-divider {
        border: none;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        margin: 30px 0;
    }

    .section-title {
        color: #00d26a;
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .section-title i {
        font-size: 1.2rem;
    }

    .summary-card {
        background: rgba(0, 210, 106, 0.08);
        border: 1px solid rgba(0, 210, 106, 0.2);
        border-radius: 15px;
        padding: 25px;
        margin-bottom: 25px;
    }

    .summary-card h5 {
        color: #00d26a;
        font-weight: 700;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .summary-card hr {
        border-color: rgba(0, 210, 106, 0.2);
    }

    .summary-card p {
        color: #b8b8b8;
        margin-bottom: 8px;
    }

    .summary-card strong {
        color: #fff;
    }

    .summary-price {
        font-size: 1.8rem;
        font-weight: 800;
        color: #00d26a !important;
    }

    .btn-save {
        background: linear-gradient(135deg, #00d26a, #00ff88);
        border: none;
        color: #0a0a14;
        font-weight: 600;
        padding: 14px 30px;
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .btn-save:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(0, 210, 106, 0.3);
        color: #0a0a14;
    }

    .btn-cancel {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #b8b8b8;
        font-weight: 600;
        padding: 14px 30px;
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
    }

    .btn-cancel:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.3);
        color: #fff;
    }

    .alert-danger {
        background: rgba(220, 53, 69, 0.1);
        border: 1px solid rgba(220, 53, 69, 0.3);
        border-radius: 12px;
        color: #ff6b6b;
    }

    .text-danger {
        color: #ff6b6b !important;
        font-size: 0.85rem;
        margin-top: 5px;
    }

    @@media (max-width: 991px) {
        .create-page {
            padding-top: 100px;
        }
    }
</style>

<div class="create-page">
    <div class="container">
        <!-- Page Header -->
        <div class="page-header" data-aos="fade-down">
            <h1><i class="bi bi-calendar-plus me-2"></i>Randevu Oluştur</h1>
            <p>Antrenörünüzü ve hizmetinizi seçerek randevunuzu oluşturun</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8" data-aos="fade-up">
                <div class="edit-card">
                    <div class="edit-card-header">
                        <h5><i class="bi bi-calendar-check"></i> Randevu Bilgileri</h5>
                    </div>
                    <div class="edit-card-body">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <ul class="mb-0">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }

                        <form asp-action="Create" method="post" id="appointmentForm">
                            @Html.AntiForgeryToken()
                        
                        <!-- Antrenör Seçimi -->
                        <div class="mb-4">
                            <label asp-for="TrainerId" class="form-label">
                                <i class="bi bi-person-badge"></i> Antrenör Seçin
                            </label>
                            <select asp-for="TrainerId" class="form-select" id="trainerSelect">
                                <option value="">Antrenör Seçin</option>
                                @if (Model.Trainers != null)
                                {
                                    @foreach (var trainer in Model.Trainers)
                                    {
                                        <option value="@trainer.Id" 
                                                data-services="@string.Join(",", trainer.TrainerServices?.Select(ts => ts.ServiceId) ?? new List<int>())">
                                            @trainer.FullName
                                        </option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="TrainerId" class="text-danger"></span>
                        </div>

                        <!-- Hizmet Seçimi -->
                        <div class="mb-4">
                            <label asp-for="ServiceId" class="form-label">
                                <i class="bi bi-grid-3x3-gap"></i> Hizmet Seçin
                            </label>
                            <select asp-for="ServiceId" class="form-select" id="serviceSelect" disabled>
                                <option value="">Önce antrenör seçin</option>
                            </select>
                            <span asp-validation-for="ServiceId" class="text-danger"></span>
                            <small class="text-muted mt-2 d-block">Sadece seçilen antrenörün sunduğu hizmetler gösterilir.</small>
                        </div>

                        <!-- Tarih Seçimi -->
                        <div class="mb-4">
                            <label asp-for="AppointmentDate" class="form-label">
                                <i class="bi bi-calendar-date"></i> Tarih Seçin
                            </label>
                            <input asp-for="AppointmentDate" type="date" class="form-control" id="dateSelect"
                                   min="@DateTime.Today.ToString("yyyy-MM-dd")" 
                                   max="@DateTime.Today.AddMonths(1).ToString("yyyy-MM-dd")">
                            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                        </div>

                        <!-- Saat Seçimi -->
                        <div class="mb-4">
                            <label asp-for="AppointmentTime" class="form-label">
                                <i class="bi bi-clock"></i> Saat Seçin
                            </label>
                            <select name="AppointmentTime" class="form-select" id="timeSelect">
                                <option value="">Saat seçin</option>
                                @for (int h = 8; h <= 21; h++)
                                {
                                    var timeValue = $"{h:D2}:00:00";
                                    <option value="@timeValue">@($"{h:D2}:00")</option>
                                }
                            </select>
                            <span asp-validation-for="AppointmentTime" class="text-danger"></span>
                        </div>

                        <!-- Not -->
                        <div class="mb-4">
                            <label asp-for="Notes" class="form-label">
                                <i class="bi bi-chat-dots"></i> Not (Opsiyonel)
                            </label>
                            <textarea asp-for="Notes" class="form-control" rows="3" 
                                      placeholder="Antrenöre iletmek istediğiniz not..."></textarea>
                        </div>

                        <!-- Özet -->
                        <div class="summary-card" id="summaryCard" style="display:none;">
                            <h5><i class="bi bi-receipt me-2"></i> Randevu Özeti</h5>
                            <hr>
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Hizmet:</strong> <span id="summaryService"></span></p>
                                    <p><strong>Antrenör:</strong> <span id="summaryTrainer"></span></p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Tarih:</strong> <span id="summaryDate"></span></p>
                                    <p><strong>Saat:</strong> <span id="summaryTime"></span></p>
                                </div>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-white fw-bold">Toplam Ücret:</span>
                                <span class="summary-price"><span id="summaryPrice"></span> ₺</span>
                            </div>
                        </div>

                            <div class="d-flex justify-content-between gap-3">
                                <a asp-action="Index" class="btn-cancel">
                                    <i class="bi bi-arrow-left"></i> Geri Dön
                                </a>
                                <button type="submit" class="btn-save">
                                    <i class="bi bi-check-lg"></i> Randevu Oluştur
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Tüm hizmetleri JavaScript'e aktar
        const allServices = [
            @if (Model.Services != null)
            {
                @foreach (var service in Model.Services)
                {
                    @Html.Raw($"{{ id: {service.Id}, name: '{service.Name}', price: {service.Price} }},")
                }
            }
        ];

        // Antrenör değişince hizmetleri filtrele
        document.getElementById('trainerSelect').addEventListener('change', function() {
            const serviceSelect = document.getElementById('serviceSelect');
            const selectedOption = this.options[this.selectedIndex];
            
            // Hizmet ve tarih seçimlerini sıfırla
            serviceSelect.innerHTML = '<option value="">Hizmet Seçin</option>';
            document.getElementById('dateSelect').value = '';
            document.getElementById('timeSelect').innerHTML = '<option value="">Saat seçin</option>';
            
            if (this.value) {
                // Antrenörün sunduğu hizmet ID'lerini al
                const serviceIds = selectedOption.dataset.services.split(',').map(id => parseInt(id)).filter(id => !isNaN(id));
                
                if (serviceIds.length === 0) {
                    serviceSelect.innerHTML = '<option value="">Bu antrenörün hizmeti yok</option>';
                    serviceSelect.disabled = true;
                } else {
                    // Sadece antrenörün sunduğu hizmetleri ekle
                    allServices.forEach(service => {
                        if (serviceIds.includes(service.id)) {
                            const option = document.createElement('option');
                            option.value = service.id;
                            option.textContent = `${service.name} - ${service.price} ₺`;
                            option.dataset.price = service.price;
                            serviceSelect.appendChild(option);
                        }
                    });
                    serviceSelect.disabled = false;
                }
            } else {
                serviceSelect.innerHTML = '<option value="">Önce antrenör seçin</option>';
                serviceSelect.disabled = true;
            }
            updateSummary();
        });

        // Tarih değiştiğinde müsait saatleri yükle
        document.getElementById('dateSelect').addEventListener('change', async function() {
            const trainerId = document.getElementById('trainerSelect').value;
            const date = this.value;
            const timeSelect = document.getElementById('timeSelect');
            
            timeSelect.innerHTML = '<option value="">Saat seçin</option>';
            
            if (trainerId && date) {
                // Basit saat seçenekleri oluştur
                for (let h = 8; h <= 21; h++) {
                    const option = document.createElement('option');
                    option.value = `${h.toString().padStart(2,'0')}:00:00`;
                    option.textContent = `${h.toString().padStart(2,'0')}:00`;
                    timeSelect.appendChild(option);
                }
            }
            updateSummary();
        });

        // Service ve time değişikliklerinde özeti güncelle
        document.getElementById('serviceSelect').addEventListener('change', updateSummary);
        document.getElementById('timeSelect').addEventListener('change', updateSummary);

        function updateSummary() {
            const trainerSelect = document.getElementById('trainerSelect');
            const serviceSelect = document.getElementById('serviceSelect');
            const dateSelect = document.getElementById('dateSelect');
            const timeSelect = document.getElementById('timeSelect');
            const summaryCard = document.getElementById('summaryCard');

            if (trainerSelect.value && serviceSelect.value && dateSelect.value && timeSelect.value) {
                document.getElementById('summaryTrainer').textContent = trainerSelect.options[trainerSelect.selectedIndex].text;
                document.getElementById('summaryService').textContent = serviceSelect.options[serviceSelect.selectedIndex].text.split(' - ')[0];
                document.getElementById('summaryDate').textContent = new Date(dateSelect.value).toLocaleDateString('tr-TR', { day: 'numeric', month: 'long', year: 'numeric' });
                document.getElementById('summaryTime').textContent = timeSelect.options[timeSelect.selectedIndex].text;
                document.getElementById('summaryPrice').textContent = serviceSelect.options[serviceSelect.selectedIndex].dataset.price;
                summaryCard.style.display = 'block';
            } else {
                summaryCard.style.display = 'none';
            }
        }
    </script>
}
