@model FitnessCenter.Models.Trainer
@{
    ViewData["Title"] = Model.FullName + " - Antrenör Detayları";
}

<style>
    .profile-card {
        background: linear-gradient(145deg, #12121c 0%, #0d0d14 100%);
        border: 1px solid rgba(0, 210, 106, 0.1);
        border-radius: 20px;
        overflow: hidden;
    }

    .profile-header {
        background: linear-gradient(135deg, rgba(0, 210, 106, 0.15) 0%, rgba(0, 210, 106, 0.05) 100%);
        padding: 30px 20px;
        text-align: center;
        border-bottom: 1px solid rgba(0, 210, 106, 0.1);
    }

    .profile-avatar {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        background: linear-gradient(135deg, #00d26a, #00ff88);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
        font-size: 3rem;
        color: #0a0a14;
        box-shadow: 0 10px 40px rgba(0, 210, 106, 0.2);
        overflow: hidden;
    }

    .profile-avatar img { width:100%; height:100%; object-fit:cover; }

    .profile-name { font-size: 1.25rem; font-weight: 700; color: #fff; margin-bottom: 4px; }
    .profile-email { color: #00d26a; font-size: 0.95rem; }

    .profile-stats { padding: 20px; }

    .stat-item { display:flex; align-items:center; gap:12px; padding:12px; background: rgba(255,255,255,0.02); border-radius:12px; margin-bottom:10px; border:1px solid rgba(255,255,255,0.03); }
    .stat-icon { width:44px; height:44px; border-radius:10px; background: linear-gradient(135deg, rgba(0,210,106,0.18), rgba(0,210,106,0.08)); display:flex; align-items:center; justify-content:center; color: #00d26a; }
    .stat-info { flex:1; }
    .stat-label { font-size:0.8rem; color:#888; text-transform:uppercase; }
    .stat-value { font-size:1.05rem; font-weight:600; color:#fff; }

    .edit-card { background: linear-gradient(145deg, #12121c 0%, #0d0d14 100%); border:1px solid rgba(0,210,106,0.1); border-radius:20px; overflow:hidden; }
    .edit-card-header { background: linear-gradient(135deg, rgba(0,210,106,0.15), rgba(0,210,106,0.05)); padding:18px 20px; border-bottom:1px solid rgba(0,210,106,0.1); }
    .edit-card-header h5 { margin:0; color:#fff; font-weight:600; display:flex; align-items:center; gap:8px; }
    .edit-card-body { padding:18px 20px; color:#d6d6d6; }

    /* Ensure card text colors match Profile page */
    .edit-card-body, .profile-stats, .profile-header, .profile-card, .trainer-left {
        color: #d6d6d6;
    }

    .edit-card .card-title,
    .edit-card-header h5,
    .profile-name {
        color: #fff;
    }

    .edit-card .card-text,
    .edit-card-body p,
    .profile-stats .stat-value {
        color: #dfe6e9;
    }

    .edit-card .text-muted,
    .profile-header p,
    .profile-email {
        color: #b8b8b8 !important;
    }
    /* Services and gym item styles to match Profile.stat-item */
    .service-item {
        display:flex; align-items:flex-start; gap:12px; padding:12px; background: rgba(255,255,255,0.02); border-radius:12px; margin-bottom:12px; border:1px solid rgba(255,255,255,0.03);
    }
    .service-icon { width:56px; height:56px; border-radius:10px; background: linear-gradient(135deg, rgba(0,210,106,0.18), rgba(0,210,106,0.08)); display:flex; align-items:center; justify-content:center; color:#00d26a; font-size:1.25rem; }
    .service-info { flex:1; }
    .service-title { font-weight:700; color:#fff; margin-bottom:6px; }
    .service-desc { color:#dfe6e9; font-size:0.95rem; }
    .gym-item { display:flex; gap:12px; align-items:center; padding:12px; background: rgba(255,255,255,0.02); border-radius:12px; border:1px solid rgba(255,255,255,0.03); }
    .gym-item img { width:80px; height:80px; object-fit:cover; border-radius:8px; }
    /* Contact card - refined theme style */
    .contact-card { background: linear-gradient(145deg, #12121c 0%, #0d0d14 100%); border:1px solid rgba(0,210,106,0.08); border-radius:16px; overflow:hidden; }
    .contact-list { padding:12px 0; display:flex; flex-direction:column; gap:10px; }
    .contact-item { display:flex; gap:12px; align-items:center; padding:12px; background: rgba(255,255,255,0.02); border-radius:12px; border:1px solid rgba(255,255,255,0.03); }
    .contact-icon { width:52px; height:52px; border-radius:12px; display:flex; align-items:center; justify-content:center; background: linear-gradient(135deg, rgba(0,210,106,0.18), rgba(0,210,106,0.08)); color:#000; font-size:1.25rem; }
    .contact-info { display:flex; flex-direction:column; }
    .contact-label { font-size:0.75rem; color:#b8b8b8; text-transform:uppercase; letter-spacing:0.6px; }
    .contact-link { font-weight:600; color:#dfe6e9; text-decoration:none; }
    .contact-link:hover { color:#fff; text-decoration:underline; }

    .section-title { font-size:1rem; font-weight:600; color:#00d26a; display:flex; align-items:center; gap:8px; margin-bottom:12px; }
        .trainer-left { display:flex; flex-direction:column; gap:16px; }
    .btn-ai {
        background: linear-gradient(135deg, #00d26a 0%, #00ff88 100%);
        border: none;
        color: #000;
        font-weight: 700;
        padding: 15px 30px;
        border-radius: 30px;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        text-decoration: none;
    }

    .btn-ai:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 30px rgba(0, 210, 106, 0.4);
        color: #000;
    }
</style>

<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Antrenörler</a></li>
            <li class="breadcrumb-item active">@Model.FullName</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-4">
            <div class="trainer-left">
                <div class="profile-card">
                <div class="profile-header">
                    @{ 
                        var trainerImages = new[] {
                            "https://images.unsplash.com/photo-1567013127542-490d757e51fc?w=400",
                            "https://images.unsplash.com/photo-1594381898411-846e7d193883?w=400",
                            "https://images.unsplash.com/photo-1571019614242-c5c5dee9f50b?w=400",
                            "https://images.unsplash.com/photo-1518611012118-696072aa579a?w=400"
                        };
                        var imgUrl = Model.ProfileImageUrl;
                        if (string.IsNullOrEmpty(imgUrl) || imgUrl.StartsWith("/images/") || imgUrl.StartsWith("~/"))
                        {
                            imgUrl = trainerImages[(Model.Id - 1) % trainerImages.Length];
                        }
                        else if (imgUrl.StartsWith("~"))
                        {
                            imgUrl = Url.Content(imgUrl);
                        }
                    }
                    <div class="profile-avatar">
                        @if (!string.IsNullOrEmpty(imgUrl))
                        {
                            <img src="@imgUrl" alt="Profil">
                        }
                        else
                        {
                            <i class="bi bi-person-fill"></i>
                        }
                    </div>
                    <h4 class="profile-name">@Model.FullName</h4>
                    <p class="profile-email">@Model.Specializations</p>
                </div>
                <div class="profile-stats text-center">
                    <div class="stat-item justify-content-center">
                        <div class="stat-icon"><i class="bi bi-award"></i></div>
                        <div class="stat-info text-center">
                            <div class="stat-label">Deneyim</div>
                            <div class="stat-value">@(Model.ExperienceYears ?? 0) Yıl</div>
                        </div>
                    </div>
                    <div class="px-3 mt-2">
                        <a asp-controller="Appointment" asp-action="Create" asp-route-trainerId="@Model.Id" class="btn-ai w-100">
                            <i class="bi bi-calendar-plus"></i> Randevu Al
                        </a>
                    </div>
                </div>
            </div>

                <!-- İletişim Bilgileri -->
                <div class="contact-card mt-4">
                    <div class="edit-card-header">
                        <h5><i class="bi bi-envelope"></i> İletişim</h5>
                    </div>
                    <div class="edit-card-body">
                        <div class="contact-list">
                            @if (!string.IsNullOrEmpty(Model.Email))
                            {
                                <div class="contact-item">
                                    <div class="contact-icon"><i class="bi bi-envelope"></i></div>
                                    <div class="contact-info">
                                        <div class="contact-label">E-posta</div>
                                        <a class="contact-link" href="mailto:@Model.Email">@Model.Email</a>
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.Phone))
                            {
                                <div class="contact-item">
                                    <div class="contact-icon"><i class="bi bi-telephone"></i></div>
                                    <div class="contact-info">
                                        <div class="contact-label">Telefon</div>
                                        <a class="contact-link" href="tel:@Model.Phone">@Model.Phone</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <!-- Hakkında -->
            <div class="edit-card mb-4">
                <div class="edit-card-header"><h5><i class="bi bi-person"></i> Hakkında</h5></div>
                <div class="edit-card-body">
                    <p>@(Model.Biography ?? "Bu antrenör henüz bir biyografi eklememiştir.")</p>
                </div>
            </div>

            <!-- Çalışma Saatleri -->
            <div class="edit-card mb-4">
                <div class="edit-card-header"><h5><i class="bi bi-clock"></i> Çalışma Saatleri</h5></div>
                <div class="edit-card-body">
                    <p><strong>Günlük Çalışma Saati:</strong> @Model.WorkStartTime.ToString(@"hh\:mm") - @Model.WorkEndTime.ToString(@"hh\:mm")</p>
                    @if (Model.Availabilities != null && Model.Availabilities.Any())
                    {
                        <h6 class="mt-3 section-title">Müsait Günler</h6>
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var availability in Model.Availabilities.OrderBy(a => a.DayOfWeek))
                            {
                                string dayName = availability.DayOfWeek switch
                                {
                                    DayOfWeek.Monday => "Pazartesi",
                                    DayOfWeek.Tuesday => "Salı",
                                    DayOfWeek.Wednesday => "Çarşamba",
                                    DayOfWeek.Thursday => "Perşembe",
                                    DayOfWeek.Friday => "Cuma",
                                    DayOfWeek.Saturday => "Cumartesi",
                                    DayOfWeek.Sunday => "Pazar",
                                    _ => ""
                                };
                                <span class="badge bg-primary">@dayName: @availability.StartTime.ToString(@"hh\:mm") - @availability.EndTime.ToString(@"hh\:mm")</span>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Hizmetler -->
            @if (Model.TrainerServices != null && Model.TrainerServices.Any())
            {
                <div class="edit-card mb-4">
                    <div class="edit-card-header"><h5><i class="bi bi-list-check"></i> Sunduğu Hizmetler</h5></div>
                    <div class="edit-card-body">
                        <div class="row">
                            @foreach (var ts in Model.TrainerServices)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="service-item">
                                        <div class="service-icon"><i class="bi bi-briefcase-fill"></i></div>
                                        <div class="service-info">
                                            <div class="service-title">@ts.Service?.Name</div>
                                            <div class="service-desc">@ts.Service?.Description</div>
                                            <div class="d-flex justify-content-between mt-2">
                                                <span class="badge bg-info">@ts.Service?.DurationMinutes dk</span>
                                                <span class="badge bg-success">@ts.Service?.Price ₺</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Spor Salonu -->
            @if (Model.Gym != null)
            {
                <div class="edit-card">
                    <div class="edit-card-header"><h5><i class="bi bi-building"></i> Spor Salonu</h5></div>
                    <div class="edit-card-body">
                        <div class="gym-item">
                            <img src="@(Model.Gym.ImageUrl ?? "https://via.placeholder.com/100x100?text=Gym")" alt="Gym">
                            <div class="service-info">
                                <div class="service-title">@Model.Gym.Name</div>
                                <div class="service-desc"><i class="bi bi-geo-alt"></i> @Model.Gym.Address</div>
                                <div class="service-desc"><i class="bi bi-clock"></i> @Model.Gym.OpeningTime.ToString(@"hh\:mm") - @Model.Gym.ClosingTime.ToString(@"hh\:mm")</div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
