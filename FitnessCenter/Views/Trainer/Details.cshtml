@model FitnessCenter.Models.Trainer
@{
    ViewData["Title"] = Model.FullName + " - Antrenör Detayları";
}

<style>
    .profile-card {
        background: linear-gradient(145deg, #12121c 0%, #0d0d14 100%);
        border: 1px solid rgba(0, 210, 106, 0.1);
        border-radius: 20px;
        overflow: hidden;
        height: 100%;
    }

    .profile-header {
        background: linear-gradient(135deg, rgba(0, 210, 106, 0.15) 0%, rgba(0, 210, 106, 0.05) 100%);
        padding: 30px 20px;
        text-align: center;
        border-bottom: 1px solid rgba(0, 210, 106, 0.1);
    }

    .profile-avatar {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        background: linear-gradient(135deg, #00d26a, #00ff88);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
        font-size: 3rem;
        color: #0a0a14;
        box-shadow: 0 10px 40px rgba(0, 210, 106, 0.2);
        overflow: hidden;
    }

    .profile-avatar img { width:100%; height:100%; object-fit:cover; }

    .profile-name { font-size: 1.25rem; font-weight: 700; color: #fff; margin-bottom:6px; }
    .profile-email { color: #00d26a; font-size: 0.95rem; }

    .profile-stats { padding: 20px; }

    .stat-item { display:flex; align-items:center; gap:12px; padding:12px; background: rgba(255,255,255,0.02); border-radius:12px; margin-bottom:10px; border:1px solid rgba(255,255,255,0.03); }
    .stat-icon { width:44px; height:44px; border-radius:10px; display:flex; align-items:center; justify-content:center; background: linear-gradient(135deg, rgba(0,210,106,0.15), rgba(0,210,106,0.08)); color:#00d26a; }
    .stat-label { font-size:0.8rem; color:#888; text-transform:uppercase; }
    .stat-value { font-size:1.05rem; font-weight:700; color:#fff; }

    .edit-card { background: linear-gradient(145deg, #12121c 0%, #0d0d14 100%); border:1px solid rgba(0,210,106,0.1); border-radius:20px; overflow:hidden; }
    .edit-card-header { background: linear-gradient(135deg, rgba(0,210,106,0.12), rgba(0,210,106,0.04)); padding:16px 20px; border-bottom:1px solid rgba(0,210,106,0.08); }
    .edit-card-body { padding:18px; color:#e6e6e6; }

    .section-title { color:#00d26a; font-weight:600; display:flex; align-items:center; gap:8px; }
</style>

<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Antrenörler</a></li>
            <li class="breadcrumb-item active">@Model.FullName</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-4">
            <div class="profile-card">
                <div class="profile-header">
                    <div class="profile-avatar">
                        @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
                        {
                            <img src="@Model.ProfileImageUrl" alt="@Model.FullName" />
                        }
                        else
                        {
                            <i class="bi bi-person-fill"></i>
                        }
                    </div>
                    <h4 class="profile-name">@Model.FullName</h4>
                    <p class="profile-email">@Model.Specializations</p>
                </div>
                <div class="profile-stats">
                    <div class="stat-item">
                        <div class="stat-icon"><i class="bi bi-calendar2-check"></i></div>
                        <div class="stat-info">
                            <div class="stat-label">Deneyim</div>
                            <div class="stat-value">@((Model.ExperienceYears ?? 0)) Yıl</div>
                        </div>
                    </div>
                    <div class="d-grid mt-2">
                        <a asp-controller="Appointment" asp-action="Create" asp-route-trainerId="@Model.Id" class="btn btn-primary btn-lg">
                            <i class="bi bi-calendar-plus"></i> Randevu Al
                        </a>
                    </div>
                </div>
            </div>

            <!-- İletişim Bilgileri -->
            <div class="edit-card mt-4">
                <div class="edit-card-header">
                    <h5 class="mb-0"><i class="bi bi-envelope"></i> İletişim</h5>
                </div>
                <div class="edit-card-body">
                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <p class="mb-2">
                            <i class="bi bi-envelope text-primary"></i>
                            <a href="mailto:@Model.Email">@Model.Email</a>
                        </p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        <p class="mb-0">
                            <i class="bi bi-telephone text-primary"></i>
                            <a href="tel:@Model.Phone">@Model.Phone</a>
                        </p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <!-- Hakkında -->
            <div class="edit-card mb-4">
                <div class="edit-card-header">
                    <h5 class="mb-0"><i class="bi bi-person"></i> Hakkında</h5>
                </div>
                <div class="edit-card-body">
                    <p>@(Model.Biography ?? "Bu antrenör henüz bir biyografi eklememiştir.")</p>
                </div>
            </div>

            <!-- Çalışma Saatleri -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-clock"></i> Çalışma Saatleri</h5>
                </div>
                <div class="card-body">
                    <p>
                        <strong>Günlük Çalışma Saati:</strong> 
                        @Model.WorkStartTime.ToString(@"hh\:mm") - @Model.WorkEndTime.ToString(@"hh\:mm")
                    </p>
                    
                    @if (Model.Availabilities != null && Model.Availabilities.Any())
                    {
                        <h6 class="mt-3">Müsait Günler:</h6>
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var availability in Model.Availabilities.OrderBy(a => a.DayOfWeek))
                            {
                                string dayName = availability.DayOfWeek switch
                                {
                                    DayOfWeek.Monday => "Pazartesi",
                                    DayOfWeek.Tuesday => "Salı",
                                    DayOfWeek.Wednesday => "Çarşamba",
                                    DayOfWeek.Thursday => "Perşembe",
                                    DayOfWeek.Friday => "Cuma",
                                    DayOfWeek.Saturday => "Cumartesi",
                                    DayOfWeek.Sunday => "Pazar",
                                    _ => ""
                                };
                                <span class="badge bg-primary">
                                    @dayName: @availability.StartTime.ToString(@"hh\:mm") - @availability.EndTime.ToString(@"hh\:mm")
                                </span>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Hizmetler -->
            @if (Model.TrainerServices != null && Model.TrainerServices.Any())
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-list-check"></i> Sunduğu Hizmetler</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var ts in Model.TrainerServices)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card border">
                                        <div class="card-body">
                                            <h6 class="card-title">@ts.Service?.Name</h6>
                                            <p class="card-text small text-muted">@ts.Service?.Description</p>
                                            <div class="d-flex justify-content-between">
                                                <span class="badge bg-info">@ts.Service?.DurationMinutes dk</span>
                                                <span class="badge bg-success">@ts.Service?.Price ₺</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Spor Salonu -->
            @if (Model.Gym != null)
            {
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-building"></i> Spor Salonu</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <img src="@(Model.Gym.ImageUrl ?? "https://via.placeholder.com/100x100?text=Gym")" 
                                 class="rounded me-3" style="width: 80px; height: 80px; object-fit: cover;">
                            <div>
                                <h6 class="mb-1">@Model.Gym.Name</h6>
                                <p class="text-muted small mb-0">
                                    <i class="bi bi-geo-alt"></i> @Model.Gym.Address
                                </p>
                                <p class="text-muted small mb-0">
                                    <i class="bi bi-clock"></i> @Model.Gym.OpeningTime.ToString(@"hh\:mm") - @Model.Gym.ClosingTime.ToString(@"hh\:mm")
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
