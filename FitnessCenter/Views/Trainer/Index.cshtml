@model List<FitnessCenter.Models.Trainer>
@{
    ViewData["Title"] = "Antrenörlerimiz";
    ViewData["NoTopPadding"] = true;
}

<style>
    .page-header {
        background: linear-gradient(135deg, rgba(0, 210, 106, 0.1) 0%, rgba(0, 255, 136, 0.05) 100%);
        padding: 60px 0;
        padding-top: 140px;
        margin-bottom: 50px;
        border-bottom: 1px solid rgba(0, 210, 106, 0.2);
    }

    .page-header h1 {
        font-size: 3rem;
        font-weight: 800;
        background: linear-gradient(135deg, #00d26a 0%, #00ff88 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .trainer-card {
        background: linear-gradient(145deg, #12121c 0%, #0d0d14 100%);
        border: 1px solid rgba(0, 210, 106, 0.1);
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.4s ease;
    }

    .trainer-card:hover {
        transform: translateY(-10px);
        border-color: rgba(0, 210, 106, 0.5);
        box-shadow: 0 20px 40px rgba(0, 210, 106, 0.2);
    }

    .trainer-card .card-img-top {
        height: 280px;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .trainer-card:hover .card-img-top {
        transform: scale(1.05);
    }

    .trainer-card .card-body {
        padding: 25px;
        position: relative;
    }

    .trainer-card .card-title {
        font-size: 1.4rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 15px;
    }

    .trainer-card .badge {
        background: rgba(0, 210, 106, 0.2) !important;
        color: #00d26a;
        padding: 8px 15px;
        border-radius: 20px;
        font-weight: 500;
    }

    .trainer-card .card-footer {
        background: transparent;
        border-top: 1px solid rgba(0, 210, 106, 0.1);
        padding: 20px 25px;
    }

    .btn-details {
        background: transparent;
        border: 2px solid rgba(0, 210, 106, 0.5);
        color: #00d26a;
        padding: 10px 20px;
        border-radius: 30px;
        transition: all 0.3s ease;
    }

    .btn-details:hover {
        background: rgba(0, 210, 106, 0.1);
        border-color: #00d26a;
        color: #00d26a;
    }

    .btn-book {
        background: linear-gradient(135deg, #00d26a 0%, #00ff88 100%);
        border: none;
        color: #000;
        font-weight: 600;
        padding: 10px 20px;
        border-radius: 30px;
        transition: all 0.3s ease;
    }

    .btn-book:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 30px rgba(0, 210, 106, 0.4);
        color: #000;
    }

    .experience-badge {
        position: absolute;
        top: -15px;
        right: 20px;
        background: linear-gradient(135deg, #00d26a 0%, #00ff88 100%);
        color: #000;
        padding: 8px 15px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.9rem;
    }

    .trainer-info {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #b8b8b8;
        font-size: 0.9rem;
        margin-bottom: 10px;
    }

    .trainer-info i {
        color: #00d26a;
    }
</style>

<!-- Page Header -->
<div class="page-header text-center" data-aos="fade-down">
    <div class="container">
        <h1><i class="bi bi-people-fill me-2"></i> Antrenörlerimiz</h1>
        <p class="lead text-white-50 mt-3">Alanında uzman ve deneyimli eğitmenlerimizle tanışın</p>
    </div>
</div>

<div class="container pb-5">
    <div class="row">
        @{ var delay = 0; }
        @foreach (var trainer in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4" data-aos="fade-up" data-aos-delay="@delay">
                <div class="card h-100 trainer-card">
                    <div style="overflow: hidden;">
                        @{
                            var trainerImages = new[] {
                                "https://images.unsplash.com/photo-1567013127542-490d757e51fc?w=400",
                                "https://images.unsplash.com/photo-1594381898411-846e7d193883?w=400",
                                "https://images.unsplash.com/photo-1571019614242-c5c5dee9f50b?w=400",
                                "https://images.unsplash.com/photo-1518611012118-696072aa579a?w=400"
                            };
                            var imgUrl = trainer.ProfileImageUrl;
                            if (string.IsNullOrEmpty(imgUrl) || imgUrl.StartsWith("/images/"))
                            {
                                imgUrl = trainerImages[(trainer.Id - 1) % trainerImages.Length];
                            }
                        }
                        <img src="@imgUrl" class="card-img-top" alt="@trainer.FullName">
                    </div>
                    <div class="card-body">
                        <span class="experience-badge">
                            <i class="bi bi-award-fill"></i> @trainer.ExperienceYears Yıl
                        </span>
                        <h5 class="card-title">@trainer.FullName</h5>
                        <div class="mb-3">
                            <span class="badge">@trainer.Specializations</span>
                        </div>
                        <div class="trainer-info">
                            <i class="bi bi-clock"></i>
                            <span>@trainer.WorkStartTime.ToString(@"hh\:mm") - @trainer.WorkEndTime.ToString(@"hh\:mm")</span>
                        </div>
                        <div class="trainer-info">
                            <i class="bi bi-building"></i>
                            <span>@(trainer.Gym?.Name ?? "Tüm Şubeler")</span>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@trainer.Id" class="btn btn-details flex-fill">
                                <i class="bi bi-info-circle"></i> Detaylar
                            </a>
                            <a asp-controller="Appointment" asp-action="Create" asp-route-trainerId="@trainer.Id" 
                               class="btn btn-book flex-fill">
                                <i class="bi bi-calendar-plus"></i> Randevu
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            delay += 100;
            if (delay > 300) { delay = 0; }
        }
    </div>
</div>
