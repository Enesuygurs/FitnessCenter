@model FitnessCenter.Models.Service
@{
    ViewData["Title"] = "Hizmet Düzenle";
    ViewData["NoTopPadding"] = true;
    var gyms = ViewBag.Gyms as List<FitnessCenter.Models.Gym>;
}

<style>
    .create-page {
        min-height: 100vh;
        padding-top: 120px;
        padding-bottom: 80px;
        background: linear-gradient(135deg, #0a0a14 0%, #0f0f1a 100%);
    }

    .page-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .page-header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #fff;
    }

    .page-header h1 i {
        background: linear-gradient(135deg, #00d26a, #00ff88);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .page-header p {
        color: #b8b8b8;
        font-size: 1.1rem;
    }

    .edit-card {
        background: linear-gradient(145deg, #12121c 0%, #0d0d14 100%);
        border: 1px solid rgba(0, 210, 106, 0.1);
        border-radius: 20px;
        overflow: hidden;
    }

    .edit-card-header {
        background: linear-gradient(135deg, rgba(0, 210, 106, 0.15) 0%, rgba(0, 210, 106, 0.05) 100%);
        padding: 25px 30px;
        border-bottom: 1px solid rgba(0, 210, 106, 0.1);
    }

    .edit-card-header h5 {
        margin: 0;
        color: #fff;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .edit-card-header h5 i {
        color: #00d26a;
    }

    .edit-card-body {
        padding: 30px;
    }

    .form-label {
        color: #b8b8b8;
        font-weight: 500;
        margin-bottom: 8px;
        font-size: 0.9rem;
    }

    .form-control, .form-select {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        color: #fff;
        padding: 12px 16px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

    .form-control:focus, .form-select:focus {
        background: rgba(0, 210, 106, 0.05);
        border-color: #00d26a;
        box-shadow: 0 0 0 3px rgba(0, 210, 106, 0.1);
        color: #fff;
    }

    .form-control::placeholder {
        color: #666;
    }

    .form-select option {
        background: #12121c;
        color: #fff;
    }

    .form-check-input {
        background-color: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        width: 20px;
        height: 20px;
    }

    .form-check-input:checked {
        background-color: #00d26a;
        border-color: #00d26a;
    }

    .form-check-input:focus {
        border-color: #00d26a;
        box-shadow: 0 0 0 3px rgba(0, 210, 106, 0.1);
    }

    .form-check-label {
        color: #b8b8b8;
        margin-left: 8px;
    }

    .section-divider {
        border: none;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        margin: 30px 0;
    }

    .section-title {
        color: #00d26a;
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .section-title i {
        font-size: 1.2rem;
    }

    .btn-save {
        background: linear-gradient(135deg, #00d26a, #00ff88);
        border: none;
        color: #0a0a14;
        font-weight: 600;
        padding: 14px 30px;
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .btn-save:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(0, 210, 106, 0.3);
        color: #0a0a14;
    }

    .btn-cancel {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #b8b8b8;
        font-weight: 600;
        padding: 14px 30px;
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
    }

    .btn-cancel:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.3);
        color: #fff;
    }

    .alert-danger {
        background: rgba(220, 53, 69, 0.1);
        border: 1px solid rgba(220, 53, 69, 0.3);
        border-radius: 12px;
        color: #ff6b6b;
    }

    .text-danger {
        color: #ff6b6b !important;
        font-size: 0.85rem;
        margin-top: 5px;
    }

    @@media (max-width: 991px) {
        .create-page {
            padding-top: 100px;
        }
    }
</style>

<div class="create-page">
    <div class="container">
        <!-- Page Header -->
        <div class="page-header" data-aos="fade-down">
            <h1><i class="bi bi-pencil-square me-2"></i>Hizmet Düzenle</h1>
            <p>Hizmet bilgilerini güncelleyin</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8" data-aos="fade-up">
                <div class="edit-card">
                    <div class="edit-card-header">
                        <h5><i class="bi bi-gear"></i> Hizmet Bilgileri</h5>
                    </div>
                    <div class="edit-card-body">
                        <form asp-action="EditService" method="post">
                            <input type="hidden" asp-for="Id" />
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">Hizmet Adı</label>
                                <input asp-for="Name" class="form-control" placeholder="Örn: Kişisel Antrenman" required data-val="true" data-val-required="Hizmet adı zorunludur." />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label">Açıklama</label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Hizmet açıklaması..." required data-val="true" data-val-required="Açıklama zorunludur."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <hr class="section-divider">

                            <div class="section-title">
                                <i class="bi bi-info-circle"></i> Hizmet Detayları
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label asp-for="Category" class="form-label">Kategori</label>
                                <select asp-for="Category" class="form-select" required data-val="true" data-val-required="Kategori seçimi zorunludur.">
                                    <option value="">Seçiniz</option>
                                    <option value="Fitness">Fitness</option>
                                    <option value="Yoga">Yoga</option>
                                    <option value="Pilates">Pilates</option>
                                    <option value="Personal Training">Kişisel Antrenman</option>
                                    <option value="Weight Loss">Kilo Verme</option>
                                    <option value="Muscle Building">Kas Geliştirme</option>
                                </select>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label asp-for="DurationMinutes" class="form-label">Süre (Dakika)</label>
                                    <input asp-for="DurationMinutes" class="form-control" type="number" placeholder="60" required data-val="true" data-val-required="Süre zorunludur." />
                                    <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label asp-for="Price" class="form-label">Fiyat (₺)</label>
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="100.00" required data-val="true" data-val-required="Fiyat zorunludur." />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="GymId" class="form-label">Spor Salonu</label>
                            <select asp-for="GymId" class="form-select" required data-val="true" data-val-required="Salon seçimi zorunludur.">
                                <option value="">Seçiniz</option>
                                @if (gyms != null)
                                {
                                    @foreach (var gym in gyms)
                                    {
                                        <option value="@gym.Id">@gym.Name</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="GymId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ImageUrl" class="form-label">Görsel URL</label>
                                <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                            </div>

                            <div class="form-check mb-4">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label">Aktif</label>
                            </div>

                            <div class="d-flex justify-content-between gap-3">
                                <a asp-action="Services" class="btn-cancel">
                                    <i class="bi bi-arrow-left"></i> Geri
                                </a>
                                <button type="submit" class="btn-save">
                                    <i class="bi bi-check-lg"></i> Güncelle
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
