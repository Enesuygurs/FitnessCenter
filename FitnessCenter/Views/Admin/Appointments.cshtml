@model List<FitnessCenter.Models.Appointment>
@{
    ViewData["Title"] = "Randevu Yönetimi";
    var currentStatus = ViewBag.CurrentStatus as FitnessCenter.Models.AppointmentStatus?;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-calendar-check"></i> Randevu Yönetimi</h2>
    </div>

    <!-- Filter Buttons -->
    <div class="mb-4">
        <a asp-action="Appointments" class="btn @(currentStatus == null ? "btn-primary" : "btn-outline-primary")">Tümü</a>
        <a asp-action="Appointments" asp-route-status="@FitnessCenter.Models.AppointmentStatus.Pending" 
           class="btn @(currentStatus == FitnessCenter.Models.AppointmentStatus.Pending ? "btn-warning" : "btn-outline-warning")">Beklemede</a>
        <a asp-action="Appointments" asp-route-status="@FitnessCenter.Models.AppointmentStatus.Confirmed" 
           class="btn @(currentStatus == FitnessCenter.Models.AppointmentStatus.Confirmed ? "btn-success" : "btn-outline-success")">Onaylı</a>
        <a asp-action="Appointments" asp-route-status="@FitnessCenter.Models.AppointmentStatus.Completed" 
           class="btn @(currentStatus == FitnessCenter.Models.AppointmentStatus.Completed ? "btn-info" : "btn-outline-info")">Tamamlanan</a>
        <a asp-action="Appointments" asp-route-status="@FitnessCenter.Models.AppointmentStatus.Cancelled" 
           class="btn @(currentStatus == FitnessCenter.Models.AppointmentStatus.Cancelled ? "btn-danger" : "btn-outline-danger")">İptal</a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            @if (Model.Count == 0)
            {
                <div class="alert alert-info">Randevu bulunamadı.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tarih</th>
                                <th>Saat</th>
                                <th>Üye</th>
                                <th>Antrenör</th>
                                <th>Hizmet</th>
                                <th>Ücret</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var apt in Model)
                            {
                                <tr>
                                    <td>@apt.Id</td>
                                    <td>@apt.AppointmentDate.ToString("dd.MM.yyyy")</td>
                                    <td>@apt.AppointmentTime.ToString(@"hh\:mm") - @apt.EndTime.ToString(@"hh\:mm")</td>
                                    <td>@apt.User?.FullName</td>
                                    <td>@apt.Trainer?.FullName</td>
                                    <td>@apt.Service?.Name</td>
                                    <td>@apt.TotalPrice.ToString("N0") ₺</td>
                                    <td>
                                        @{
                                            var badgeClass = apt.Status switch
                                            {
                                                FitnessCenter.Models.AppointmentStatus.Pending => "bg-warning text-dark",
                                                FitnessCenter.Models.AppointmentStatus.Confirmed => "bg-success",
                                                FitnessCenter.Models.AppointmentStatus.Cancelled => "bg-danger",
                                                FitnessCenter.Models.AppointmentStatus.Completed => "bg-info",
                                                _ => "bg-secondary"
                                            };
                                            var statusText = apt.Status switch
                                            {
                                                FitnessCenter.Models.AppointmentStatus.Pending => "Beklemede",
                                                FitnessCenter.Models.AppointmentStatus.Confirmed => "Onaylı",
                                                FitnessCenter.Models.AppointmentStatus.Cancelled => "İptal",
                                                FitnessCenter.Models.AppointmentStatus.Completed => "Tamamlandı",
                                                _ => "Bilinmiyor"
                                            };
                                        }
                                        <span class="badge @badgeClass">@statusText</span>
                                    </td>
                                    <td>
                                        @if (apt.Status == FitnessCenter.Models.AppointmentStatus.Pending)
                                        {
                                            <form asp-action="ConfirmAppointment" asp-route-id="@apt.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-success" title="Onayla">
                                                    <i class="bi bi-check"></i>
                                                </button>
                                            </form>
                                            <form asp-action="CancelAppointment" asp-route-id="@apt.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-danger" title="İptal Et">
                                                    <i class="bi bi-x"></i>
                                                </button>
                                            </form>
                                        }
                                        @if (apt.Status == FitnessCenter.Models.AppointmentStatus.Confirmed)
                                        {
                                            <form asp-action="CompleteAppointment" asp-route-id="@apt.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-info" title="Tamamlandı">
                                                    <i class="bi bi-check-all"></i>
                                                </button>
                                            </form>
                                            <form asp-action="CancelAppointment" asp-route-id="@apt.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-danger" title="İptal Et">
                                                    <i class="bi bi-x"></i>
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
