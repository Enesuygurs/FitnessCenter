@model FitnessCenter.Models.Trainer
@{
    ViewData["Title"] = "Yeni Antrenör Ekle";
    ViewData["NoTopPadding"] = true;
    var gyms = ViewBag.Gyms as List<FitnessCenter.Models.Gym>;
    var services = ViewBag.Services as List<FitnessCenter.Models.Service>;
}

<style>
    .create-page {
        min-height: 100vh;
        padding-top: 120px;
        padding-bottom: 80px;
        background: linear-gradient(135deg, #0a0a14 0%, #0f0f1a 100%);
    }

    .page-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .page-header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 15px;
    }

    .page-header h1 i {
        background: linear-gradient(135deg, #00d26a, #00ff88);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .page-header p {
        color: #b8b8b8;
        font-size: 1.1rem;
    }

    .edit-card {
        background: linear-gradient(145deg, #12121c 0%, #0d0d14 100%);
        border: 1px solid rgba(0, 210, 106, 0.1);
        border-radius: 20px;
        overflow: hidden;
    }

    .edit-card-header {
        background: linear-gradient(135deg, rgba(0, 210, 106, 0.15) 0%, rgba(0, 210, 106, 0.05) 100%);
        padding: 25px 30px;
        border-bottom: 1px solid rgba(0, 210, 106, 0.1);
    }

    .edit-card-header h5 {
        margin: 0;
        color: #fff;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .edit-card-header h5 i {
        color: #00d26a;
    }

    .edit-card-body {
        padding: 30px;
    }

    .form-label {
        color: #b8b8b8;
        font-weight: 500;
        margin-bottom: 8px;
        font-size: 0.9rem;
    }

    .form-control, .form-select {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        color: #fff;
        padding: 12px 16px;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

    .form-control:focus, .form-select:focus {
        background: rgba(0, 210, 106, 0.05);
        border-color: #00d26a;
        box-shadow: 0 0 0 3px rgba(0, 210, 106, 0.1);
        color: #fff;
    }

    .form-control::placeholder {
        color: #666;
    }

    input[type="time"]::-webkit-calendar-picker-indicator {
        filter: invert(1);
        cursor: pointer;
    }

    .form-select option {
        background: #12121c;
        color: #fff;
    }

    .form-check-input {
        background-color: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        width: 20px;
        height: 20px;
    }

    .form-check-input:checked {
        background-color: #00d26a;
        border-color: #00d26a;
    }

    .form-check-input:focus {
        border-color: #00d26a;
        box-shadow: 0 0 0 3px rgba(0, 210, 106, 0.1);
    }

    .form-check-label {
        color: #b8b8b8;
        margin-left: 8px;
    }

    .section-divider {
        border: none;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        margin: 30px 0;
    }

    .section-title {
        color: #00d26a;
        font-size: 1rem;
        font-weight: 600;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .section-title i {
        font-size: 1.2rem;
    }

    .btn-save {
        background: linear-gradient(135deg, #00d26a, #00ff88);
        border: none;
        color: #0a0a14;
        font-weight: 600;
        padding: 14px 30px;
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
    }

    .btn-save:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(0, 210, 106, 0.3);
        color: #0a0a14;
    }

    .btn-cancel {
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #b8b8b8;
        font-weight: 600;
        padding: 14px 30px;
        border-radius: 12px;
        font-size: 1rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        text-decoration: none;
    }

    .btn-cancel:hover {
        background: rgba(255, 255, 255, 0.05);
        border-color: rgba(255, 255, 255, 0.3);
        color: #fff;
    }

    .alert-danger {
        background: rgba(220, 53, 69, 0.1);
        border: 1px solid rgba(220, 53, 69, 0.3);
        border-radius: 12px;
        color: #ff6b6b;
    }

    .text-danger {
        color: #ff6b6b !important;
        font-size: 0.85rem;
        margin-top: 5px;
    }

    @@media (max-width: 991px) {
        .create-page {
            padding-top: 100px;
        }
    }
</style>

<div class="create-page">
    <div class="container">
        <!-- Page Header -->
        <div class="page-header" data-aos="fade-down">
            <h1><i class="bi bi-plus-circle me-2"></i>Yeni Antrenör Ekle</h1>
            <p>Yeni bir antrenör oluşturun</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8" data-aos="fade-up">
                <div class="edit-card">
                    <div class="edit-card-header">
                        <h5><i class="bi bi-person-badge"></i> Antrenör Bilgileri</h5>
                    </div>
                    <div class="edit-card-body">
                        <form asp-action="CreateTrainer" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="FirstName" class="form-label">Ad</label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Örn: Ahmet" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="LastName" class="form-label">Soyad</label>
                                    <input asp-for="LastName" class="form-control" placeholder="Örn: Yılmaz" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Email" class="form-label">E-posta</label>
                                    <input asp-for="Email" class="form-control" type="email" placeholder="ahmet@fitzone.com" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Phone" class="form-label">Telefon</label>
                                    <input asp-for="Phone" class="form-control" placeholder="(555) 123-4567" />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Specializations" class="form-label">Uzmanlık Alanları</label>
                                <input asp-for="Specializations" class="form-control" placeholder="Örn: Fitness, Yoga, Kilo Verme" />
                            </div>

                            <div class="mb-3">
                                <label asp-for="Biography" class="form-label">Biyografi</label>
                                <textarea asp-for="Biography" class="form-control" rows="3" placeholder="Antrenör hakkında bilgi..."></textarea>
                            </div>

                            <hr class="section-divider">

                            <div class="section-title">
                                <i class="bi bi-clock"></i> Çalışma Bilgileri
                            </div>

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label asp-for="WorkStartTime" class="form-label">Başlangıç Saati</label>
                                    <input asp-for="WorkStartTime" class="form-control" type="time" />
                                    <span asp-validation-for="WorkStartTime" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label asp-for="WorkEndTime" class="form-label">Bitiş Saati</label>
                                    <input asp-for="WorkEndTime" class="form-control" type="time" />
                                    <span asp-validation-for="WorkEndTime" class="text-danger"></span>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label asp-for="ExperienceYears" class="form-label">Deneyim (Yıl)</label>
                                    <input asp-for="ExperienceYears" class="form-control" type="number" placeholder="5" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="GymId" class="form-label">Spor Salonu</label>
                                <select asp-for="GymId" class="form-select">
                                    <option value="">Seçiniz</option>
                                    @if (gyms != null)
                                    {
                                        @foreach (var gym in gyms)
                                        {
                                            <option value="@gym.Id">@gym.Name</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="GymId" class="text-danger"></span>
                            </div>

                            <hr class="section-divider">

                            <div class="section-title">
                                <i class="bi bi-grid-3x3-gap"></i> Verebileceği Hizmetler
                            </div>

                            <div class="mb-3">
                                <div class="row">
                                    @if (services != null)
                                    {
                                        @foreach (var service in services)
                                        {
                                            <div class="col-md-4 mb-2">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="selectedServices" value="@service.Id" id="service_@service.Id">
                                                    <label class="form-check-label" for="service_@service.Id">@service.Name</label>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="ProfileImageUrl" class="form-label">Profil Görseli URL</label>
                                <input asp-for="ProfileImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                            </div>

                            <div class="form-check mb-4">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label">Aktif</label>
                            </div>

                            <div class="d-flex justify-content-between gap-3">
                                <a asp-action="Trainers" class="btn-cancel">
                                    <i class="bi bi-arrow-left"></i> Geri
                                </a>
                                <button type="submit" class="btn-save">
                                    <i class="bi bi-check-lg"></i> Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
