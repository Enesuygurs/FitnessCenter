@model List<FitnessCenter.Models.Gym>
@{
    ViewData["Title"] = "Spor Salonu Yönetimi";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-building"></i> Spor Salonu Yönetimi</h2>
        <a asp-action="CreateGym" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Yeni Salon
        </a>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Salon Adı</th>
                            <th>Adres</th>
                            <th>Telefon</th>
                            <th>Çalışma Saatleri</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var gym in Model)
                        {
                            <tr>
                                <td>@gym.Id</td>
                                <td>@gym.Name</td>
                                <td><small>@gym.Address</small></td>
                                <td>@gym.Phone</td>
                                <td>@gym.OpeningTime.ToString(@"hh\:mm") - @gym.ClosingTime.ToString(@"hh\:mm")</td>
                                <td>
                                    @if (gym.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="EditGym" asp-route-id="@gym.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="DeleteGym" asp-route-id="@gym.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Bu spor salonunu silmek istediğinize emin misiniz?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
