@model FitnessCenter.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Ana Sayfa";
    ViewData["NoTopPadding"] = true;
}

<!-- Hero Section -->
<section class="hero-section position-relative">
    <!-- Animated Background -->
    <div class="hero-bg-animation">
        <div class="floating-shape shape-1"></div>
        <div class="floating-shape shape-2"></div>
        <div class="floating-shape shape-3"></div>
        <div class="floating-shape shape-4"></div>
        <div class="grid-overlay"></div>
    </div>
    
    <div class="container position-relative" style="z-index: 10;">
        <div class="row align-items-center min-vh-100 py-5">
            <div class="col-lg-6" data-aos="fade-right">
                <span class="badge bg-primary-custom text-dark px-4 py-2 mb-4 rounded-pill">
                    <i class="bi bi-star-fill me-1"></i> #1 Fitness Merkezi
                </span>
                <h1 class="display-3 fw-bold mb-4 hero-title">
                    Gücünü <span class="text-primary-custom glow-text">Keşfet</span>,
                    <br>Limitlerini <span class="text-primary-custom glow-text">Aş</span>
                </h1>
                <p class="lead mb-5 text-white-50" style="font-size: 1.2rem;">
                    Modern ekipmanlar, uzman antrenörler ve yapay zeka destekli kişisel programlarla 
                    fitness yolculuğunuza başlayın. <span class="text-primary-custom fw-semibold">Hayalinizdeki vücuda</span> ulaşmanın tam zamanı!
                </p>
                <div class="d-flex flex-wrap gap-3 mb-5">
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg px-5 glow-animation">
                        <i class="bi bi-rocket-takeoff me-2"></i> Hemen Başla
                    </a>
                    <a asp-controller="Service" asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                        <i class="bi bi-play-circle me-2"></i> Keşfet
                    </a>
                </div>
                
                <!-- Mini Stats -->
                <div class="row g-4 hero-mini-stats">
                    <div class="col-4">
                        <div class="stat-item">
                            <h3 class="fw-bold text-primary-custom mb-0 counter">@Model.TotalMembers+</h3>
                            <small class="text-white-50">Aktif Üye</small>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="stat-item">
                            <h3 class="fw-bold text-primary-custom mb-0">@Model.TotalTrainers</h3>
                            <small class="text-white-50">Uzman Antrenör</small>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="stat-item">
                            <h3 class="fw-bold text-primary-custom mb-0">7/24</h3>
                            <small class="text-white-50">Destek</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 text-center" data-aos="fade-left" data-aos-delay="200">
                <div class="hero-image-wrapper">
                    <div class="hero-image-glow"></div>
                    <img src="https://images.unsplash.com/photo-1534438327276-14e5300c3a48?w=600" 
                         alt="Fitness" class="img-fluid hero-image rounded-4">
                    
                    <!-- Floating Cards -->
                    <div class="floating-card card-1" data-aos="fade-up" data-aos-delay="400">
                        <div class="d-flex align-items-center gap-3">
                            <div class="icon-box bg-primary-custom">
                                <i class="bi bi-fire text-dark"></i>
                            </div>
                            <div>
                                <small class="text-white-50">Günlük Kalori</small>
                                <h6 class="mb-0 text-white">2,500 kcal</h6>
                            </div>
                        </div>
                    </div>
                    
                    <div class="floating-card card-2" data-aos="fade-up" data-aos-delay="600">
                        <div class="d-flex align-items-center gap-3">
                            <div class="icon-box bg-primary-custom">
                                <i class="bi bi-graph-up-arrow text-dark"></i>
                            </div>
                            <div>
                                <small class="text-white-50">İlerleme</small>
                                <h6 class="mb-0 text-white">+45%</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="scroll-indicator" data-aos="fade-up" data-aos-delay="800">
        <div class="mouse">
            <div class="wheel"></div>
        </div>
        <span>Aşağı Kaydır</span>
    </div>
</section>

<!-- Stats Section -->
<section class="py-5 position-relative overflow-hidden" style="background: linear-gradient(180deg, #0a0a14 0%, #0f0f1a 100%);">
    <div class="container py-5">
        <div class="row g-4">
            <div class="col-lg-3 col-md-6" data-aos="fade-up">
                <div class="stat-card text-center p-4">
                    <div class="stat-icon mx-auto mb-3">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <h2 class="fw-bold text-white mb-1">@Model.TotalMembers<span class="text-primary-custom">+</span></h2>
                    <p class="text-white-50 mb-0">Mutlu Üye</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="100">
                <div class="stat-card text-center p-4">
                    <div class="stat-icon mx-auto mb-3">
                        <i class="bi bi-person-badge"></i>
                    </div>
                    <h2 class="fw-bold text-white mb-1">@Model.TotalTrainers<span class="text-primary-custom">+</span></h2>
                    <p class="text-white-50 mb-0">Uzman Antrenör</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="200">
                <div class="stat-card text-center p-4">
                    <div class="stat-icon mx-auto mb-3">
                        <i class="bi bi-grid-fill"></i>
                    </div>
                    <h2 class="fw-bold text-white mb-1">@(Model.FeaturedServices?.Count ?? 0)<span class="text-primary-custom">+</span></h2>
                    <p class="text-white-50 mb-0">Farklı Program</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="300">
                <div class="stat-card text-center p-4">
                    <div class="stat-icon mx-auto mb-3">
                        <i class="bi bi-trophy-fill"></i>
                    </div>
                    <h2 class="fw-bold text-white mb-1">5<span class="text-primary-custom">+</span></h2>
                    <p class="text-white-50 mb-0">Yıllık Deneyim</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="py-5 position-relative" style="background: #0f0f1a;">
    <div class="section-decoration">
        <div class="decoration-circle circle-1"></div>
        <div class="decoration-circle circle-2"></div>
    </div>
    
    <div class="container py-5 position-relative">
        <div class="text-center mb-5" data-aos="fade-up">
            <span class="badge bg-primary-custom text-dark px-4 py-2 mb-3 rounded-pill">
                <i class="bi bi-stars me-1"></i> HİZMETLERİMİZ
            </span>
            <h2 class="display-5 fw-bold text-white mb-3">Size Özel <span class="text-primary-custom">Programlar</span></h2>
            <p class="text-white-50 mx-auto" style="max-width: 600px;">
                Hedeflerinize ulaşmanız için tasarlanmış profesyonel fitness programları
            </p>
        </div>
        
        <div class="row g-4">
            @if (Model.FeaturedServices != null)
            {
                var delay = 0;
                @foreach (var service in Model.FeaturedServices)
                {
                    <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="@delay">
                        <div class="card service-card h-100">
                            <div class="card-body text-center p-4">
                                <div class="feature-icon">
                                    @if (service.Category?.ToLower().Contains("yoga") == true)
                                    {
                                        <i class="bi bi-flower1"></i>
                                    }
                                    else if (service.Category?.ToLower().Contains("pilates") == true)
                                    {
                                        <i class="bi bi-heart-pulse"></i>
                                    }
                                    else if (service.Category?.ToLower().Contains("personal") == true)
                                    {
                                        <i class="bi bi-person-check"></i>
                                    }
                                    else if (service.Category?.ToLower().Contains("weight") == true)
                                    {
                                        <i class="bi bi-arrow-down-circle"></i>
                                    }
                                    else if (service.Category?.ToLower().Contains("muscle") == true)
                                    {
                                        <i class="bi bi-arrow-up-circle"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-lightning"></i>
                                    }
                                </div>
                                <h5 class="card-title text-white fw-bold mb-3">@service.Name</h5>
                                <p class="card-text text-white-50 small mb-4">@service.Description</p>
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <span class="badge" style="background: rgba(0, 210, 106, 0.1); color: var(--primary-color);">
                                        <i class="bi bi-clock me-1"></i> @service.DurationMinutes dk
                                    </span>
                                    <span class="fw-bold text-primary-custom fs-5">@service.Price.ToString("N0") ₺</span>
                                </div>
                                <a asp-controller="Appointment" asp-action="Create" asp-route-serviceId="@service.Id" 
                                   class="btn btn-outline-primary w-100">
                                    <i class="bi bi-calendar-plus me-1"></i> Randevu Al
                                </a>
                            </div>
                        </div>
                    </div>
                    delay += 100;
                }
            }
        </div>
        
        <div class="text-center mt-5" data-aos="fade-up">
            <a asp-controller="Service" asp-action="Index" class="btn btn-primary btn-lg px-5">
                <i class="bi bi-arrow-right me-2"></i> Tüm Hizmetleri Gör
            </a>
        </div>
    </div>
</section>

<!-- Trainers Section -->
<section class="py-5" style="background: linear-gradient(180deg, #0f0f1a 0%, #0a0a14 100%);">
    <div class="container py-5">
        <div class="text-center mb-5" data-aos="fade-up">
            <span class="badge bg-primary-custom text-dark px-4 py-2 mb-3 rounded-pill">
                <i class="bi bi-award me-1"></i> UZMAN KADRO
            </span>
            <h2 class="display-5 fw-bold text-white mb-3">Profesyonel <span class="text-primary-custom">Antrenörler</span></h2>
            <p class="text-white-50 mx-auto" style="max-width: 600px;">
                Alanında uzman, sertifikalı ve deneyimli antrenörlerimizle tanışın
            </p>
        </div>
        
        <div class="row g-4">
            @if (Model.FeaturedTrainers != null)
            {
                var delay = 0;
                @foreach (var trainer in Model.FeaturedTrainers)
                {
                    <div class="col-lg-3 col-md-6" data-aos="fade-up" data-aos-delay="@delay">
                        <div class="card trainer-card h-100">
                            <div class="trainer-img-wrapper">
                                <img src="@(trainer.ProfileImageUrl ?? $"https://ui-avatars.com/api/?name={trainer.FirstName}+{trainer.LastName}&size=300&background=00d26a&color=000")" 
                                     class="card-img-top" alt="@trainer.FullName">
                                <div class="trainer-overlay">
                                    <a asp-controller="Appointment" asp-action="Create" asp-route-trainerId="@trainer.Id" 
                                       class="btn btn-primary btn-sm">
                                        <i class="bi bi-calendar-plus"></i> Randevu Al
                                    </a>
                                </div>
                            </div>
                            <div class="card-body text-center p-4">
                                <h5 class="card-title text-white fw-bold mb-1">@trainer.FullName</h5>
                                <p class="text-primary-custom small mb-3">@trainer.Specializations</p>
                                <div class="d-flex justify-content-center gap-2 mb-3">
                                    <span class="badge" style="background: rgba(0, 210, 106, 0.1); color: var(--primary-color);">
                                        <i class="bi bi-star-fill me-1"></i> @trainer.ExperienceYears Yıl
                                    </span>
                                </div>
                                <a asp-controller="Trainer" asp-action="Details" asp-route-id="@trainer.Id" 
                                   class="btn btn-outline-primary btn-sm w-100">
                                    <i class="bi bi-info-circle me-1"></i> Profili Gör
                                </a>
                            </div>
                        </div>
                    </div>
                    delay += 100;
                }
            }
        </div>
        
        <div class="text-center mt-5" data-aos="fade-up">
            <a asp-controller="Trainer" asp-action="Index" class="btn btn-primary btn-lg px-5">
                <i class="bi bi-arrow-right me-2"></i> Tüm Antrenörleri Gör
            </a>
        </div>
    </div>
</section>

<!-- AI Section -->
<section class="py-5 position-relative overflow-hidden" style="background: #0a0a14;">
    <div class="ai-bg-pattern"></div>
    
    <div class="container py-5 position-relative">
        <div class="row align-items-center g-5">
            <div class="col-lg-6" data-aos="fade-right">
                <div class="ai-image-wrapper">
                    <div class="ai-glow"></div>
                    <img src="https://images.unsplash.com/photo-1576678927484-cc907957088c?w=600" 
                         alt="AI Fitness" class="img-fluid rounded-4 ai-image">
                    
                    <!-- AI Badge -->
                    <div class="ai-badge" data-aos="zoom-in" data-aos-delay="300">
                        <i class="bi bi-robot"></i>
                        <span>AI Powered</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-6" data-aos="fade-left">
                <span class="badge bg-primary-custom text-dark px-4 py-2 mb-4 rounded-pill">
                    <i class="bi bi-cpu me-1"></i> YAPAY ZEKA
                </span>
                <h2 class="display-5 fw-bold text-white mb-4">
                    <span class="text-primary-custom">AI</span> Destekli Öneri Sistemi
                </h2>
                <p class="lead text-white-50 mb-4">
                    Vücut tipiniz, hedefleriniz ve sağlık durumunuza göre 
                    <span class="text-primary-custom fw-semibold">kişiselleştirilmiş</span> egzersiz ve diyet programları alın.
                </p>
                
                <div class="ai-features mb-5">
                    <div class="ai-feature-item" data-aos="fade-up" data-aos-delay="100">
                        <div class="feature-check">
                            <i class="bi bi-check-lg"></i>
                        </div>
                        <span>Kişiye özel egzersiz programı</span>
                    </div>
                    <div class="ai-feature-item" data-aos="fade-up" data-aos-delay="200">
                        <div class="feature-check">
                            <i class="bi bi-check-lg"></i>
                        </div>
                        <span>Akıllı beslenme önerileri</span>
                    </div>
                    <div class="ai-feature-item" data-aos="fade-up" data-aos-delay="300">
                        <div class="feature-check">
                            <i class="bi bi-check-lg"></i>
                        </div>
                        <span>Hedef odaklı tavsiyeler</span>
                    </div>
                    <div class="ai-feature-item" data-aos="fade-up" data-aos-delay="400">
                        <div class="feature-check">
                            <i class="bi bi-check-lg"></i>
                        </div>
                        <span>Sağlık durumuna uygun program</span>
                    </div>
                </div>
                
                <a asp-controller="AI" asp-action="Index" class="btn btn-primary btn-lg px-5 glow-animation" data-aos="fade-up" data-aos-delay="500">
                    <i class="bi bi-stars me-2"></i> Hemen Dene
                </a>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5 position-relative overflow-hidden cta-section">
    <div class="cta-bg">
        <div class="cta-shape shape-1"></div>
        <div class="cta-shape shape-2"></div>
    </div>
    
    <div class="container py-5 position-relative text-center" data-aos="zoom-in">
        <h2 class="display-4 fw-bold text-white mb-4">
            Sağlıklı Yaşama <span class="text-dark">İlk Adımı</span> Atın!
        </h2>
        <p class="lead text-dark mb-5 opacity-75" style="max-width: 600px; margin: 0 auto;">
            Hemen üye olun, fitness yolculuğunuza bugün başlayın. 
            İlk danışmanlık seansınız <strong>ÜCRETSİZ!</strong>
        </p>
        <div class="d-flex justify-content-center gap-3 flex-wrap">
            <a asp-controller="Account" asp-action="Register" class="btn btn-dark btn-lg px-5">
                <i class="bi bi-person-plus me-2"></i> Ücretsiz Kayıt Ol
            </a>
            <a asp-controller="Appointment" asp-action="Create" class="btn btn-outline-dark btn-lg px-5">
                <i class="bi bi-calendar-check me-2"></i> Randevu Al
            </a>
        </div>
    </div>
</section>

<style>
    /* Hero Section Styles */
    .hero-section {
        min-height: 100vh;
        background: linear-gradient(135deg, #0a0a14 0%, #0f0f1a 50%, #1a1a2e 100%);
        position: relative;
        overflow: hidden;
        padding-top: 80px;
    }
    
    .hero-bg-animation {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
    }
    
    .floating-shape {
        position: absolute;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(0, 210, 106, 0.1) 0%, rgba(0, 255, 136, 0.05) 100%);
        animation: float 6s ease-in-out infinite;
    }
    
    .shape-1 {
        width: 400px;
        height: 400px;
        top: -100px;
        right: -100px;
        animation-delay: 0s;
    }
    
    .shape-2 {
        width: 300px;
        height: 300px;
        bottom: 10%;
        left: -50px;
        animation-delay: 2s;
    }
    
    .shape-3 {
        width: 200px;
        height: 200px;
        top: 40%;
        right: 10%;
        animation-delay: 4s;
    }
    
    .shape-4 {
        width: 150px;
        height: 150px;
        bottom: 20%;
        right: 30%;
        animation-delay: 1s;
    }
    
    .grid-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: 
            linear-gradient(rgba(0, 210, 106, 0.03) 1px, transparent 1px),
            linear-gradient(90deg, rgba(0, 210, 106, 0.03) 1px, transparent 1px);
        background-size: 50px 50px;
    }
    
    @@keyframes float {
        0%, 100% { transform: translateY(0) rotate(0deg); }
        50% { transform: translateY(-30px) rotate(10deg); }
    }
    
    .hero-title {
        line-height: 1.2;
    }

    /* Keşfet butonu hover rengi */
    .hero-section .btn-outline-light:hover {
        background: linear-gradient(135deg, #00d26a, #00ff88);
        border-color: #00d26a;
        color: #0a0a14;
    }

    .hero-image-wrapper {
        position: relative;
        display: inline-block;
    }
    
    .hero-image-glow {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 80%;
        height: 80%;
        background: radial-gradient(circle, rgba(0, 210, 106, 0.3) 0%, transparent 70%);
        filter: blur(60px);
        z-index: 0;
    }
    
    .hero-image {
        position: relative;
        z-index: 1;
        max-height: 500px;
        object-fit: cover;
        border: 3px solid rgba(0, 210, 106, 0.3);
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    }
    
    .floating-card {
        position: absolute;
        background: rgba(26, 26, 46, 0.9);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(0, 210, 106, 0.2);
        border-radius: 15px;
        padding: 15px 20px;
        z-index: 2;
        animation: floatCard 4s ease-in-out infinite;
    }
    
    .card-1 {
        top: 20%;
        left: -10%;
        animation-delay: 0s;
    }
    
    .card-2 {
        bottom: 20%;
        right: -5%;
        animation-delay: 2s;
    }
    
    @@keyframes floatCard {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-15px); }
    }
    
    .icon-box {
        width: 45px;
        height: 45px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }
    
    .hero-mini-stats {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 2rem;
        margin-top: 2rem;
    }
    
    .stat-item {
        border-right: 1px solid rgba(255, 255, 255, 0.1);
        padding-right: 1rem;
    }
    
    .stat-item:last-child {
        border-right: none;
    }
    
    /* Scroll Indicator */
    .scroll-indicator {
        position: absolute;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        color: rgba(255, 255, 255, 0.5);
        font-size: 0.8rem;
    }
    
    .mouse {
        width: 25px;
        height: 40px;
        border: 2px solid rgba(0, 210, 106, 0.5);
        border-radius: 15px;
        position: relative;
    }
    
    .wheel {
        width: 4px;
        height: 8px;
        background: var(--primary-color);
        border-radius: 2px;
        position: absolute;
        top: 8px;
        left: 50%;
        transform: translateX(-50%);
        animation: scroll 2s infinite;
    }
    
    @@keyframes scroll {
        0% { opacity: 1; top: 8px; }
        100% { opacity: 0; top: 20px; }
    }
    
    /* Stat Cards */
    .stat-card {
        background: rgba(26, 26, 46, 0.6);
        border: 1px solid rgba(0, 210, 106, 0.1);
        border-radius: 20px;
        transition: all 0.3s ease;
    }
    
    .stat-card:hover {
        border-color: var(--primary-color);
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 210, 106, 0.1);
    }
    
    .stat-icon {
        width: 70px;
        height: 70px;
        background: linear-gradient(135deg, rgba(0, 210, 106, 0.1) 0%, rgba(0, 255, 136, 0.05) 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        color: var(--primary-color);
    }
    
    /* Section Decoration */
    .section-decoration {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        overflow: hidden;
        pointer-events: none;
    }
    
    .decoration-circle {
        position: absolute;
        border-radius: 50%;
        border: 1px solid rgba(0, 210, 106, 0.1);
    }
    
    .circle-1 {
        width: 500px;
        height: 500px;
        top: -250px;
        right: -100px;
    }
    
    .circle-2 {
        width: 300px;
        height: 300px;
        bottom: -150px;
        left: -100px;
    }
    
    /* Trainer Card Styles */
    .trainer-img-wrapper {
        position: relative;
        overflow: hidden;
    }
    
    .trainer-overlay {
        position: absolute;
